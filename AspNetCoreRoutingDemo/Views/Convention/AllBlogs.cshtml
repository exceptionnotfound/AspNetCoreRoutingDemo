
@{
    ViewData["Title"] = "AllBlogs";
}

<h2>All Blogs</h2>

<p>Here's all the blogs this site hosts.</p>

@{
    var random = new Random();
}

<ul>
    @for(int i = 0; i < 10; i++)
    {
        var nextBlog = random.Next(50);
        <li>
            @Html.ActionLink("Blog #" + nextBlog.ToString(), "index", new { blogID = nextBlog })
        </li>
    }
</ul>